<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DnGActivity">

    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/rv_albuma"
            app:layout_constraintEnd_toStartOf="@+id/rv_albumb" android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="38dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tv_albuma"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/rv_albumb"
            app:layout_constraintStart_toEndOf="@+id/rv_albuma" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_albumB" android:layout_marginTop="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_albuma" app:layout_constraintStart_toStartOf="@+id/rv_albuma"
            app:layout_constraintEnd_toEndOf="@+id/rv_albuma" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" tools:text="Album A"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_albumB" app:layout_constraintStart_toStartOf="@+id/rv_albumb"
            app:layout_constraintEnd_toEndOf="@+id/rv_albumb" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" tools:text="Album B"/>
</android.support.constraint.ConstraintLayout>